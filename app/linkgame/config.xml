<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.linkgame" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>linkgame</name>
    <description>
        一个连连看的小游戏
    </description>
    <author email="yellowwen@126.com" href="http://cordova.io">
        一个人的团队
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-splashscreen" />
    <preference name="Orientation" value="portrait" />
    <preference name="BackgroundColor" value="#ffffff"/>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="SplashScreen" value="screen"/>
        <preference name="SplashScreenDelay" value="1000"/>
        <preference name="BackgroundColor" value="#ffffff"/>
    </platform>
</widget>
